<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/report_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/n"
        android:textColor="@color/black"
        android:layout_margin="@dimen/m_padding"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_below="@id/report_item_header">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hour_dark_gray_24dp"
                android:contentDescription="@string/h_l"
                android:layout_margin="@dimen/small_padd"/>
            <TextView
                android:id="@+id/txt_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/n"
                android:layout_below="@id/img_hour"
                android:layout_margin="@dimen/small_padd"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_movie_gray_24dp"
                android:contentDescription="@string/h_l"
                android:layout_margin="@dimen/small_padd"/>
            <TextView
                android:id="@+id/txt_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/n"
                android:layout_below="@id/img_video"
                android:layout_margin="@dimen/small_padd"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_plc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_placement_dark_gray_24dp"
                android:contentDescription="@string/h_l"
                android:layout_margin="@dimen/small_padd"/>
            <TextView
                android:id="@+id/txt_plc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/n"
                android:layout_below="@id/img_plc"
                android:layout_margin="@dimen/small_padd"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_return_visit"
                android:contentDescription="@string/h_l"
                android:layout_margin="@dimen/small_padd"/>
            <TextView
                android:id="@+id/txt_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/n"
                android:layout_below="@id/img_rv"
                android:layout_margin="@dimen/small_padd"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_bs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bible_studies"
                android:contentDescription="@string/h_l"
                android:layout_margin="@dimen/small_padd"/>
            <TextView
                android:id="@+id/txt_bs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/n"
                android:layout_below="@id/img_bs"
                android:layout_margin="@dimen/small_padd"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>