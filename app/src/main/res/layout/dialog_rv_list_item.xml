<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="@dimen/m_padding"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/item_rv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/nav_header_text_size"
        android:text="@string/name"
        android:layout_toRightOf="@+id/rv_label_container"/>

    <TextView
        android:id="@+id/item_rv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_rv_name"
        android:layout_toRightOf="@+id/rv_label_container"
        android:textSize="@dimen/menu_text_size"
        android:text="@string/address"/>
</RelativeLayout>